<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthorizationServlet</servlet-name>
        <servlet-class>servlets.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthorizationServlet</servlet-name>
        <url-pattern>/Authorization</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthorizationServlet</servlet-name>
        <url-pattern>/Views/Authorization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>WatchServlet</servlet-name>
        <servlet-class>servlets.WatchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WatchServlet</servlet-name>
        <url-pattern>/WatchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WatchServlet</servlet-name>
        <url-pattern>/Views/Watch/WatchServlet</url-pattern>
    </servlet-mapping>
</web-app>